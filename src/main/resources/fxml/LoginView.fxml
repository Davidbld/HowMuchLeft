<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!--
    Vue de connexion de l'application.
    Interface pour saisir login et mot de passe.
-->
<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.calculfeuilleheure.controller.LoginController"
      spacing="20" styleClass="login-container" alignment="CENTER">

    <Label text="Connexion à Calcul Feuille d'Heure" styleClass="login-title"/>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Login (Prénom):"/>
        <TextField fx:id="loginField" promptText="Entrez votre prénom" />

        <Label text="Mot de passe:"/>
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" />
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Se connecter" onAction="#handleLogin" defaultButton="true"/>
        <Button text="Créer compte" onAction="#handleCreateAccount"/>
        <Button text="Quitter" onAction="#handleExit"/>
    </HBox>

    <Label fx:id="errorLabel" text="" styleClass="error-label"/>

</VBox>
